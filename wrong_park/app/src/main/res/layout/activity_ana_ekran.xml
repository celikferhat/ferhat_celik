<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ana_ekran">

    <TextView
        android:id="@+id/anaekran-plaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="42dp"
        android:text="Plaka"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/anaekran-plaka"
        android:layout_toEndOf="@+id/button5"
        android:ems="10"
        android:hint="plakayı giriniz"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/anaekran-plaka"
        android:layout_marginTop="115dp"
        android:text="Mesaj Konusu"
        android:textColor="@android:color/black"
        android:textSize="25dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="143dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/anaekran-plaka"
        android:layout_marginTop="186dp"
        android:text="Mesaj"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="207dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp" />

    <TextView
        android:id="@+id/anaekran-konum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="81dp"
        android:fontFamily="sans-serif"
        android:text="location"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="46dp"
        android:background="@drawable/cam"
        android:onClick="anaekran_resimcek" />

    <Button
        android:id="@+id/button6"
        android:layout_width="75dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ileri"

        android:onClick="gonder"
        android:text="" />

    <Button
        android:id="@+id/button9"
        android:layout_width="43dp"
        android:layout_height="62dp"
        android:layout_alignEnd="@+id/anaekran-plaka"
        android:layout_centerVertical="true"
        android:background="@drawable/gps"
        android:onClick="refresh" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button6"
        android:layout_marginStart="22dp"
        android:onClick="bildirimler"
        android:text="Bildirimler" />

    <Button
        android:id="@+id/button11"
        android:layout_width="73dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/button6"
        android:layout_centerHorizontal="true"
        android:background="@drawable/singout"
        android:onClick="signout"
        android:text="ÇIKIŞ" />
</RelativeLayout>