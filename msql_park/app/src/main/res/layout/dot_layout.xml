<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">

    <Button
        android:id="@+id/button10"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:text="Acil"
        android:drawableLeft="@drawable/ic_acil"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="16dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button14"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:text="Aracımı Bul"
        android:drawableLeft="@drawable/ic_araba"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button15"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button14"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:text="Sosyal Medya"
        android:drawableLeft="@drawable/ic_medya"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button16"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button15"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_oner"
        android:text="Arkadaaşına öner"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/button17"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button18"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_logout"
        android:text="Güvenli Çıkış"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button18"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button16"
        android:layout_centerHorizontal="true"
        android:text="Destek Talebi"
        android:background="#11000000"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/whitedestek"/>
</RelativeLayout>