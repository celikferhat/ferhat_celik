<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/proje_arkaplan"
    tools:context=".TarifEkle">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:text="Tarif Ekleme"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="374dp"
        android:layout_height="414dp"
        android:layout_marginBottom="131dp"
        android:layout_marginTop="100dp"
        android:fillViewport="true"
        android:background="#55999999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edit_tarif_ekle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tarif Giriniz..."
            android:textColor="#000000"
            android:textSize="20dp"
            android:inputType="textMultiLine"
            android:textAlignment="center" />
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/button_tarif_ekle"
        android:layout_width="176dp"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="EKLE"
        android:onClick="ekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView" />

</android.support.constraint.ConstraintLayout>
